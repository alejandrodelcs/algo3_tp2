<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<HBox stylesheets="@defenseStyle.css" alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/15" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.fiuba.algo3.controllers.PickDefense" styleClass="playing-background">
    <padding>
        <Insets left="10" top="5" right="10" bottom="5"/>
    </padding>
    <StackPane styleClass="card">
        <VBox onMouseClicked="#whiteTower" alignment="CENTER" spacing="10" >
            <ImageView fitWidth="100" fitHeight="100">
                <image>
                    <Image url="@img/magic2.png" />
                </image>
            </ImageView>
            <Text fill="cornsilk">White tower: </Text>
            <Text fill="cornsilk">Price: 10</Text>
            <Text fill="cornsilk">Range: 3</Text>
            <Text fill="cornsilk">Damage: 1</Text>
            <Text fill="cornsilk">Availability:</Text>
            <Text fill="cornsilk"> 1 turn</Text>
        </VBox>
    </StackPane>
    <StackPane styleClass="card">
        <VBox onMouseClicked="#silverTower" alignment="CENTER" spacing="10" >
            <ImageView fitWidth="100" fitHeight="100">
                <image>
                    <Image url="@img/silverTower.png" />
                </image>
            </ImageView>
            <Text fill="cornsilk">Silver Tower: </Text>
            <Text fill="cornsilk">Price: 20</Text>
            <Text fill="cornsilk">Range: 5</Text>
            <Text fill="cornsilk">Damage: 2</Text>
            <Text fill="cornsilk">Availability:</Text>
            <Text fill="cornsilk"> 2 turns</Text>
        </VBox>
    </StackPane>

</HBox>