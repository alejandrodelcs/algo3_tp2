<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<HBox stylesheets="@defenseStyle.css" alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/15" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.fiuba.algo3.controllers.PickPathDefense" styleClass="playing-background" >
    <padding>
        <Insets left="10" top="5" right="10" bottom="5"/>
    </padding>
    <StackPane styleClass="card">
        <VBox onMouseClicked="#sandyTrap" alignment="CENTER" spacing="10" >
            <ImageView fitWidth="150" fitHeight="150">
                <image>
                    <Image url="@img/sandyTrap.jpg" />
                </image>
            </ImageView>
            <Text >Sandy Trap: </Text>
            <Text>Price: 25</Text>
            <Text>Range: 3</Text>
            <Text>Damage: 1</Text>
            <Text>Availability: 1 turn</Text>
            <Text> 1 turn</Text>
        </VBox>
    </StackPane>
</HBox>