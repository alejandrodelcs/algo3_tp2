<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<HBox stylesheets="@defenseStyle.css" alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/15" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.fiuba.algo3.controllers.PickPathDefense" styleClass="playing-background" >
    <padding>
        <Insets left="10" top="5" right="10" bottom="5"/>
    </padding>
    <StackPane styleClass="card">
        <VBox onMouseClicked="#sandyTrap" alignment="CENTER" spacing="10" >
            <ImageView fitWidth="150" fitHeight="150">
                <image>
                    <Image url="@img/sandyTrap.png" />
                </image>
            </ImageView>
            <Text fill="cornsilk">Sandy Trap: </Text>
            <Text fill="cornsilk">Price: 25</Text>
            <Text fill="cornsilk">Availability:</Text>
            <Text fill="cornsilk"> Instant</Text>
            <Text fill="cornsilk">* Vanishes in</Text>
            <Text fill="cornsilk"> 3 turns</Text>
            <Text fill="cornsilk">* Desaccelarate</Text>
            <Text fill="cornsilk"> enemies by 50%</Text>
        </VBox>
    </StackPane>
</HBox>